<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>update</artifactId>
    <packaging>eclipse-repository</packaging>
    <parent>
        <groupId>com.google.eclipse.mechanic</groupId>
        <artifactId>releng</artifactId>
        <version>0.6.0-SNAPSHOT</version>
    </parent>
    <build>
        <plugins>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-p2-repository-plugin</artifactId>
                <configuration>
                    <repositoryName>Workspace Mechanic Updates</repositoryName>
                </configuration>
                <executions>
                    <execution>
                        <id>archive-repository</id>
                        <goals>
                            <goal>archive-repository</goal>
                        </goals>
                        <phase>post-integration-test</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.eclipse.tycho.extras</groupId>
                <artifactId>tycho-p2-extras-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>mirror</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <source>
                        <!-- source repositories to mirror from -->
                        <repository>
                            <id>workspace-mechanic</id>
                            <url>https://alfsch.github.io/eclipse-updates/workspacemechanic</url>
                            <layout>p2</layout>
                        </repository>
                    </source>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>truezip-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-out-files</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>pre-integration-test</phase>
                        <configuration>
                            <files>
                                <file>
                                    <source>${project.build.directory}/repository/content.jar/content.xml</source>
                                    <outputDirectory>${project.build.directory}/copy-file</outputDirectory>
                                </file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>xml-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-out-files</id>
                        <goals>
                            <goal>transform</goal>
                        </goals>
                        <phase>integration-test</phase>
                    </execution>
                </executions>
                <configuration>
                    <transformationSets>
                        <transformationSet>
                            <dir>${project.build.directory}/copy-file</dir>
                            <stylesheet>src/main/xml/xsl/content2html.xsl</stylesheet>
                            <fileMappers>
                                <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.RegExpFileMapper">
                                    <pattern>content\.xml$</pattern>
                                    <replacement>index.html</replacement>
                                </fileMapper>
                            </fileMappers>
                            <addedToClasspath>false</addedToClasspath>
                            <outputDir>${project.build.directory}/repository</outputDir>
                        </transformationSet>
                    </transformationSets>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>